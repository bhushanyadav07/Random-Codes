namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Storage;

class FileUploadController extends Controller
{
    public function upload(Request $request)
    {
        // Validate the request to ensure a file is provided
        $request->validate([
            'file' => 'required|file|mimes:jpg,jpeg,png,gif,pdf,doc,docx,txt|max:2048',
        ]);

        // Store the file in the storage folder
        if ($request->file('file')) {
            $filePath = $request->file('file')->store('uploads', 'public');
            return back()->with('success', 'File uploaded successfully!')->with('file', $filePath);
        }

        return back()->withErrors(['file' => 'Failed to upload file.']);
    }
}
