$today = date('Y-m-d');

// Find the starting key for upcoming dates
$startIndex = null;
foreach ($dates as $key => $date) {
  if ($date >= $today) {
    $startIndex = $key;
    break;
  }
}

// Check if any upcoming dates were found
$upcomingDates = [];
if ($startIndex !== null) {
  // Loop through remaining dates starting from the found index
  for ($i = $startIndex; $i < count($dates); $i++) {
    $upcomingDates[] = $dates[$i];
  }
} else {
  $upcomingDates = []; // Empty array if no upcoming dates found
}
